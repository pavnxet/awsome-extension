{
  "manifest_version": 3,
  "name": "Pixeldrain Helper Fix",
  "version": "1.6",
  "permissions": ["storage", "declarativeNetRequest", "tabs"],
  "host_permissions": [
    "*://*.pixeldrain.com/*",
    "*://*.pixeldrain.dev/*",
    "https://speeddrain.vercel.app/*"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "128": "icons/icon128.png"
    }
  },
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": [
        "https://pixeldrain.com/u/*",
        "https://pixeldrain.dev/u/*",
        "https://speeddrain.vercel.app/*"
      ],
      "js": ["content.js"]
    }
  ]
}
